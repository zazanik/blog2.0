{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <main class="blog create-post">

        <div class="container">

            <div class="row margin-top">

                <h2 class="title">Edit Post</h2>

                <div class="col-xs-12 col-md-6 col-md-offset-3">

                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}


                    <div class="form-group">
                        {{ form_errors(edit_form.title) }}
                        {{ form_widget(edit_form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(edit_form.content) }}
                        {{ form_widget(edit_form.content) }}
                    </div>

                    {#<div class="clearfix">#}
                        {#<div class="thumbnail col-xs-6 col-md-4">#}
                            {#<img src="{{ asset('uploads/images/' ~ post.image.filename) }}" alt="">#}
                        {#</div>#}
                    {#</div>#}

                    <div class="form-group">
                        {{ form_errors(edit_form.image) }}
                        {{ form_widget(edit_form.image) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.category) }}
                        {{ form_widget(form.category) }}
                    </div>

                    <div class="form-group">
                        {{ form_errors(form.user) }}
                        {{ form_widget(form.user) }}
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>

                    {{ form_end(edit_form) }}


                </div>


            </div>

        </div>

    </main>
{% endblock %}
