{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Posts list</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td scope="row"><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                    <td>{{ post.title }}</td>
                    <td width="300">{{ post.content }}</td>
                    <td>{{ post.image }}</td>
                    <td>

                        <a class="btn btn-info" href="{{ path('post_show', { 'id': post.id }) }}">show</a>

                        <a class="btn btn-warning" href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>

                        <a class="btn btn-danger" href="{{ path('post_delete', {'id': post.id}) }}">delete</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('post_new') }}">Create a new post</a>
            </li>
        </ul>
    </div>

{% endblock %}
