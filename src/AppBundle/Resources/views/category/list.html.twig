{% extends 'AppBundle::layout.html.twig' %}

{% block main %}
    <main class="blog">
        <div class="container">
            <h1>Category list</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td scope="row">{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td width="300">{{ category.description }}</td>
                        <td>

                            {#<a class="btn btn-info" href="{{ path('post_show', { 'id': category.id }) }}">show</a>#}

                            <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>

                            <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id}) }}">delete</a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <a href="{{ path('category_new') }}" class="btn btn-info">New</a>

        </div>
    </main>

{% endblock %}
